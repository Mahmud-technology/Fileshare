cd $HOME

# Colors:
red='\033[1;91m'
green='\033[1;92m'
yellow='\033[1;93m'
blue='\033[1;94m'
pink='\033[1;95m'
cyan='\033[1;96m'
reset='\033[0m'	

clear

if [ -d "File-Sharer" ]; then
	cd File-Sharer
	python main.py
else
	echo -e "$red[!] File-Sharer is not installed !"
	echo -e "[*] Go here:$cyan https://github.com/fh-rabbi/File-Sharer$red and install this app again.$reset"
fi
